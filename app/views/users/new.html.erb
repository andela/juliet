
<div class="ui one column centered grid container andela-color_0 landing-img-section">
  <div class="one column">
    <%= link_to(image_tag('andela-logo-white.png', :class => 'ui centered large fluid image'), 'https://andela.com') %>
  </div>
  <div class="ui header">
    <h1 class="banner-title"> Referral Campaign </h1>
  </div>
</div>
<div class="ui hidden divider"></div>
<div class="ui hidden divider"></div>
<div class="ui hidden divider"></div>
<div class="ui two column stackable grid container">
  <div class="two column row">
    <div class="six wide column">
      <div class="ui ordered tablet stackable vertical steps">
        <div class="active step step-one">
          <div class="content">
            <div class="title">Confirm Identity</div>
            <div class="description">Enter your name and a valid email & <strong>hit return</strong></div>
          </div>
        </div>
        <div class="disabled step step-two">
          <div class="content">
            <div class="title">Download Data</div>
            <div class="description">Click button to visit LinkedIn to export your connection</div>
          </div>
        </div>
        <div class="disabled step step-three">
          <div class="content">
            <div class="title">Upload Data</div>
            <div class="description">Upload downloaded <i>.csv</i> File</div>
          </div>
        </div>
      </div>
	  </div>
	  <div class="nine wide column">
      <div class="ui user-info transition">
        <%= form_for @user, method: :post, remote: true, html: { class: 'ui form user-info-form'} do  |f| %>
          <div class="field">
            <div class="two fields">
              <div class="field">
                <%= f.text_field :name, placeholder: 'John Doe', id: 'name'  %>
              </div>
              <div class="field">
                <%= f.email_field :email, placeholder: 'john.doe@example.com', id: 'email' %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      <div class="ui export-linkedin transition">
        <%= button_tag class: 'ui button massive export-btn disabled andela-color_1' do %>
              Visit LinkedIn Exporter<i class="right arrow icon"></i>
        <% end %>
      </div>
      <div class="ui upload transition">
        <%= form_tag media_contents_path, method: :post, class: 'ui form dropzone override segment disabled', id: 'media-dropzone', multipart: true do %>
          <div class="field">
            <div class="fallback">
              <input name="file" type="file"/>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
